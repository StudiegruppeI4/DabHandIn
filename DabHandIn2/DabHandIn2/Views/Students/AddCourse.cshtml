@model DabHandIn2.Models.StudentCourse

@{
    ViewData["Title"] = "Add Course";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Add Course</h1>

<h4>Student Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="auId" class="control-label"></label>
                <input type="hidden" asp-for="auId" class="control-label" value="@ViewData["ID"]">
                <label>@ViewData["ID"]</label>

            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control"/>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

