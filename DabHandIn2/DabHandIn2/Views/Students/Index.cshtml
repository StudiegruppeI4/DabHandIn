@model IEnumerable<DabHandIn2.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.auId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentCourses)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.auId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @foreach (var course in item.StudentCourses)
                {
                    @Html.DisplayFor(modelItem => course.CourseId)
                    <br/>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.auId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.auId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.auId">Delete</a> |
                <a asp-action="AddCourse" asp-route-id="@item.auId">Add course</a>
                <a asp-action="AddHelpReq" asp-route-id="@item.auId">Add Help Request</a>
            </td>
        </tr>
}
    </tbody>
</table>
