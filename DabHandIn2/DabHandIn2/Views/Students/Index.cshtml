@model IEnumerable<DabHandIn2.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.auId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercises)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignments)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.auId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @foreach (var exercise in item.Exercises)
                {
                    @Html.DisplayFor(model => exercise.Lecture)
                    @Html.DisplayFor(model => exercise.Number)
                    <br />
                }
            </td>
            <td>
                @foreach (var assignment in item.Assignments)
                {
                    @Html.DisplayFor(model => assignment.Name)
                    <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.auId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.auId">Delete</a> |
                <a asp-action="AddCourse" asp-route-id="@item.auId">Add course</a> |
                <a asp-controller="Exercises" asp-action="Create" asp-route-student="@item.auId">Request help exercise</a> |
                <a asp-controller="Assignments" asp-action="Create" asp-route-student="@item.auId">Request help assignment</a>
            </td>
        </tr>
}
    </tbody>
</table>
